generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  url  String @unique
}

model Product {
  id                  Int    @id @unique
  name                String
  categoryIds         Int[]
  price               Int
  priceCurrency       String
  quantity            Int
  availableInStoreIds Int[]
}

model Store {
  id   Int    @id @unique
  name String
}
