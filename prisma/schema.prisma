generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  url     String
  Product Product[]
}

model Product {
  id            Int      @id
  name          String
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    Int
  price         Int
  priceCurrency String
  quantity      Int
  availableIn   Shop[]
}

model Shop {
  id        Int      @id
  region    Region   @relation(fields: [regionId], references: [id])
  name      String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
  regionId  Int
}

model Region {
  id   Int    @id
  name String
  code String
  Shop Shop[]
}
